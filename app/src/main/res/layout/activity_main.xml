    <include
        layout="@layout/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.crossappfactory.slidingtab.tabs.SlidingTabLayout
        android:id="@+id/slideTab"
        android:layout_width="match_parent"
